    "@types/validator": "^13.7.1",
    "@types/yamljs": "^0.2.31",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "connect": "^3.7.0",
    "dotenv-extended": "^2.9.0",
    "dotenv-parse-variables": "^2.0.0",
    "express": "^4.17.2",
    "express-openapi-validator": "^4.13.5",
    "morgan": "^1.10.0",
    "morgan-body": "^2.6.6",
    "swagger-routes-express": "^3.3.1",
